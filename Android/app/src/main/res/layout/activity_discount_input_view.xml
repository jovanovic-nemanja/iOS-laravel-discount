<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DiscountInputView"
    android:orientation="vertical"
    android:background="@color/black">
    <RelativeLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    <TextView
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/tofino_medium"
                    android:gravity="center"
        android:layout_marginLeft="8dp"
                    android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                    android:text="Dismiss"
                    android:textColor="@color/bule"
                    android:textSize="16sp"
                    android:textStyle="bold" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/txtsubmitpincode"
                android:layout_centerInParent="true"
                android:fontFamily="@font/tofino_medium"
                android:text="Submit PIN Code"
                android:layout_centerVertical="true"

            android:textColor="@color/white"
                android:textSize="18sp" />
            <Button
                    android:id="@+id/submitBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:fontFamily="@font/tofino_medium"
                    android:background="@color/blackTransparent"
                    android:textAllCaps="false"
                    android:text="Submit"
                    android:layout_centerVertical="true"
                    android:textColor="@color/gray"
                    android:alpha="0.5"
                    android:textSize="16sp"
                    android:textStyle="bold" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/l_darkgray" />


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/tofino_regular"
        android:gravity="center"
        android:text="Enter PIN code"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16dp" />
    <EditText
        android:id="@+id/edpincode"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/btn"
        android:drawablePadding="10dp"
        android:fontFamily="@font/tofino_medium"
        android:hint="PIN Code"
        android:inputType="number"
        android:paddingLeft="@dimen/dp20"
        android:paddingTop="@dimen/dp8"
        android:maxLength="6"
        android:paddingRight="@dimen/dp15"
        android:paddingBottom="@dimen/dp8"
        android:singleLine="true"
        android:textColor="@color/darkblack"
        android:textColorHint="@color/darkblack"
        android:textSize="15dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />
</LinearLayout>
</LinearLayout>




